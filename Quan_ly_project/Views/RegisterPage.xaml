<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Quan_ly_project.Views.RegisterPage"
             BackgroundColor="#f1f1f1"
             Title="Đăng Ký">

    <VerticalStackLayout Spacing="20" Padding="40,60,40,40">

        <!-- Tiêu đề đăng ký -->
        <Label Text="Tạo Tài Khoản"
               FontSize="24"
               HorizontalOptions="Center"
               TextColor="#4CAF50" />

        <!-- Tên người dùng -->
        <Frame BorderColor="#4CAF50"
               CornerRadius="20"
               HasShadow="True"
               Padding="10"
               BackgroundColor="White">
            <Entry x:Name="UsernameEntry"
                   Placeholder="Tên người dùng"
                   Keyboard="Text"
                   HorizontalOptions="FillAndExpand"
                   TextColor="Black"
                   HeightRequest="50"
                   FontSize="16"/>
        </Frame>

        <!-- Mật khẩu -->
        <Frame BorderColor="#4CAF50"
               CornerRadius="20"
               HasShadow="True"
               Padding="10"
               BackgroundColor="White">
            <Entry x:Name="PasswordEntry"
                   Placeholder="Mật khẩu"
                   IsPassword="True"
                   HorizontalOptions="FillAndExpand"
                   TextColor="Black"
                   HeightRequest="50"
                   FontSize="16"/>
        </Frame>

        <!-- Email -->
        <Frame BorderColor="#4CAF50"
               CornerRadius="20"
               HasShadow="True"
               Padding="10"
               BackgroundColor="White">
            <Entry x:Name="EmailEntry"
                   Placeholder="Email"
                   Keyboard="Email"
                   HorizontalOptions="FillAndExpand"
                   TextColor="Black"
                   HeightRequest="50"
                   FontSize="16"/>
        </Frame>

        <!-- Nút đăng ký -->
        <Button Text="Đăng Ký"
                BackgroundColor="#4CAF50"
                TextColor="White"
                CornerRadius="20"
                HeightRequest="50"
                FontSize="18"
                Command="{Binding RegisterCommand}" />

        <!-- Liên kết quay lại trang đăng nhập -->
        <Label Text="Đã có tài khoản? Đăng nhập"
               TextColor="#4CAF50"
               HorizontalOptions="Center"
               Padding="10"
               FontSize="16">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding NavigateToLoginCommand}" />
            </Label.GestureRecognizers>
        </Label>

    </VerticalStackLayout>
</ContentPage>